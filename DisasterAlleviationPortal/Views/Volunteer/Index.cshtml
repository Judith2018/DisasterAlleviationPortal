@{
    ViewData["Title"] = "Volunteer";
}

<h2>Volunteer Sign-Up</h2>

<form method="post" asp-controller="Volunteer" asp-action="Submit">
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" name="fullName" required />
    </div>
    <div class="mb-3">
        <label for="contactNumber" class="form-label">Contact Number</label>
        <input type="text" class="form-control" name="contactNumber" required />
    </div>
    <div class="mb-3">
        <label for="availability" class="form-label">Availability</label>
        <input type="text" class="form-control" name="availability" />
    </div>
    <div class="mb-3">
        <label for="preferredDate" class="form-label">Preferred Volunteering Date</label>
        <input type="date" class="form-control" name="preferredDate" />
    </div>

    <button type="submit" class="btn btn-warning">Sign Up</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
