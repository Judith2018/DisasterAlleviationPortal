@{
    ViewData["Title"] = "Home";
}

<!-- Hero Banner -->
<div class="p-5 mb-4 bg-light rounded-3" style="background-image: url('/images/disaster-banner.jpg'); background-size: cover; background-position: center; color: white;">
    <div class="container py-5 text-center" style="background-color: rgba(0,0,0,0.5); border-radius: 10px;">
        <h1 class="display-4 fw-bold">Disaster Alleviation Portal</h1>
        <p class="lead">Empowering communities to respond, recover, and rebuild—together.</p>
        <a href="/Register" class="btn btn-warning btn-lg">Join Us</a>
    </div>
</div>

<!-- Info Cards -->
<div class="row text-center mt-4">
    <div class="col-md-4">
        <div class="card border-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">🤝 Volunteers</h5>
                <p class="card-text">Join our network of helpers and make a difference.</p>
                <a href="/Volunteer" class="btn btn-outline-primary">Sign Up</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-success mb-3">
            <div class="card-body">
                <h5 class="card-title">💰 Donations</h5>
                <p class="card-text">Track resources and ensure they reach those in need.</p>
                <a href="/Donation" class="btn btn-outline-success">Donate Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">⚠️ Disaster Reports</h5>
                <p class="card-text">Report incidents and help us respond faster.</p>
                <a href="/DisasterReport" class="btn btn-outline-danger">Report Now</a>
            </div>
        </div>
    </div>
</div>
